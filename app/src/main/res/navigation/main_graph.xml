<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/matchesFragment">

    <fragment
        android:id="@+id/matchesFragment"
        android:name="com.example.fixturesapplication.view.MatchesFragment"
        android:label="@string/matches_label"
        tools:layout="@layout/fragment_matches">
        <argument
            android:name="type"
            app:argType="com.example.domain.useCases.getMatches.GetMatchesStrategy$Factory$Type"
            android:defaultValue="FULL" />
        <action
            android:id="@+id/action_matchesFragment_to_FavoriteFragment"
            app:destination="@id/favoriteFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.fixturesapplication.view.MatchesFragment"
        android:label="@string/favorite_label"
        tools:layout="@layout/fragment_matches">
        <argument
            android:name="type"
            app:argType="com.example.domain.useCases.getMatches.GetMatchesStrategy$Factory$Type"
            android:defaultValue="FAVORITE" />
    </fragment>
</navigation>